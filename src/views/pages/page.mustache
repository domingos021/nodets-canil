{{!-- VIEW: page.mustache --}}
{{!-- Renderiza páginas de categorias (home, dogs, cats, fishes, search) --}}
{{!-- Recebe do controller: banner, menu, list (PetData[]) e searchQuery --}}

{{> header}}

{{!-- ====================================================== --}}
{{!-- BANNER DINÂMICO                                      --}}
{{!-- ====================================================== --}}
{{#banner}}
<section class="banner" style="background-image: url('/{{ background }}')">
  {{ title }}
</section>

<h2>{{ title }} disponíveis para adoção</h2>
{{/banner}}

{{!-- ====================================================== --}}
{{!-- LISTA DE ANIMAIS (quando há resultados)              --}}
{{!-- ====================================================== --}}
<div class="container list">
  {{#list}}
  <div class="item">
    <img src="/images/{{ image }}" alt="{{ petName }}" class="item--image" />
    <div class="item--name">{{ petName }}</div>
    <div class="item--breed">{{ name }}</div>
    <div class="item--color">Cor: {{ color }}</div>
    <div class="item--genre">Gênero: {{ sex }}</div>
  </div>
  {{/list}}
</div>

{{!-- ====================================================== --}}
{{!-- LISTA VAZIA (quando NÃO há resultados na busca)      --}}
{{!-- ====================================================== --}}
{{^list}}
<div class="container no-list">
  <div class="empty-state">
    <div class="empty-state__icon">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="80"
        height="80"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="1.5"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="11" cy="11" r="8"></circle>
        <path d="m21 21-4.35-4.35"></path>
        <line x1="11" y1="8" x2="11" y2="14"></line>
        <line x1="8" y1="11" x2="14" y2="11"></line>
      </svg>
    </div>
    <h2 class="empty-state__title">Nenhum animal encontrado</h2>
    {{#searchQuery}}
    <p class="empty-state__subtitle">
      Não encontramos resultados para <strong>"{{ searchQuery }}"</strong>
      {{#searchSex}}do sexo <strong>{{ searchSex }}</strong
      >{{/searchSex}}
    </p>
    {{/searchQuery}}
    {{^searchQuery}}
    <p class="empty-state__subtitle">
      Não há animais disponíveis com os filtros selecionados
    </p>
    {{/searchQuery}}
    <p class="empty-state__suggestion">
      Tente buscar por outro nome ou ajustar os filtros
    </p>
    <a href="/" class="empty-state__button">Ver todos os animais</a>
  </div>
</div>
{{/list}}

{{> footer}}
